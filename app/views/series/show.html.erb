<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <title>Listof - Séries</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <%= stylesheet_link_tag "style", media: "all" %>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a><%= link_to "Listof", home_index_path, class: "navbar-brand" %></a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a><%= link_to "Filmes", movies_path, class: "nav-link" %></a></li>
            <li class="nav-item"><a><%= link_to "Séries", series_path, class: "nav-link" %></a></li>
            <li class="nav-item"><a><%= link_to "Jogos", games_path, class: "nav-link" %></a></li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Conteudo -->
    <div class="container">
      <h2 class="text-center mb-4"><%= @serie.name %></h2>
      <%= render @serie %>
      <div class="d-inline-flex gap-2">
        <%= link_to series_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-arrow-return-left"></i>
        <% end %>
        <%= link_to edit_serie_path(@serie), class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= button_to serie_path(@serie), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
  </body>
  <!-- Bootstrap JS (opcional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <p style="color: green"><%= notice %></p>
</html>