<html lang="pt-BR">
  <%= render "home/head" %>
  <body>
    <!-- Conteudo -->
    <div class="container">
      <h2 class="text-center mb-4">Lista de Séries</h2>
      <%= link_to new_serie_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="bi bi-database-fill-add"> Adicionar uma nova série</i>
      <% end %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>Gênero</th>
              <th>Status</th>
              <th>Avaliação</th>
              <th>Comentário</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @series.each do |serie| %>
              <tr>
                <td><%= serie.name %></td>
                <td><%= serie.gender %></td>
                <td><%= serie.status %></td>
                <td><%= serie.assessment %></td>
                <td><%= serie.comment %></td>
                <td class="text-center align-middle">
                  <div class="d-inline-flex gap-2">
                    <%= link_to edit_serie_path(serie), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to serie_path(serie), method: :get, class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= button_to serie_path(serie), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- Paginação -->
        <%= paginate @series %>
      </div>
    </div>
  </body>
  <p style="color: green"><%= notice %></p>
</html>