<html lang="pt-BR">
  <%= render "home/head" %>
  <body>
    <!-- Conteudo -->
    <div class="container">
      <h2 class="text-center mb-4">Lista de Filmes</h2>
      <%= link_to new_movie_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="bi bi-database-fill-add"> Adicionar um novo filme</i>
      <% end %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>Gênero</th>
              <th>Status</th>
              <th>Avaliação</th>
              <th>Comentário</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @movies.each do |movie| %>
              <tr>
                <td><%= movie.name %></td>
                <td><%= movie.gender %></td>
                <td><%= movie.status %></td>
                <td><%= movie.assessment %></td>
                <td><%= movie.comment %></td>
                <td class="text-center align-middle">
                  <div class="d-inline-flex gap-2">
                    <%= link_to edit_movie_path(movie), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to movie_path(movie), method: :get, class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= button_to movie_path(movie), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- Paginação -->
        <%= paginate @movies %>
      </div>
    </div>
  </body>
  <p style="color: green"><%= notice %></p>
</html>