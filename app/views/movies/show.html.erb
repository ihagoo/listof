<html lang="pt-BR">
  <%= render "home/head" %>
  <body>
    <!-- Conteudo -->
    <div class="container">
      <h2 class="text-center mb-4"><%= @movie.name %></h2>
      <%= render @movie %>
      <div class="d-inline-flex gap-2">
        <%= link_to movies_path, class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-arrow-return-left"></i>
        <% end %>
        <%= link_to edit_movie_path(@movie), class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= button_to movie_path(@movie), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
  </body>
  <p style="color: green"><%= notice %></p>
</html>