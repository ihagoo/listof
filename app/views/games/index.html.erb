<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <title>Listof - Jogos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <%= stylesheet_link_tag "style", media: "all" %>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a><%= link_to "Listof", home_index_path, class: "navbar-brand" %></a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a><%= link_to "Filmes", movies_path, class: "nav-link" %></a></li>
            <li class="nav-item"><a><%= link_to "Séries", series_path, class: "nav-link" %></a></li>
            <li class="nav-item"><a><%= link_to "Jogos", games_path, class: "nav-link" %></a></li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Conteudo -->
    <div class="container">
      <h2 class="text-center mb-4">Lista de Jogos</h2>

      <div class="table-responsive">
        <table class="table table-striped table-bordered text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>Plataforma</th>
              <th>Gênero</th>
              <th>Status</th>
              <th>Dificuldade</th>
              <th>Avaliação</th>
              <th>Comentário</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td><%= game.name %></td>
                <td><%= game.platform %></td>
                <td><%= game.gender %></td>
                <td><%= game.status %></td>
                <td><%= game.difficulty %></td>
                <td><%= game.assessment %></td>
                <td><%= game.comment %></td>
                <td class="text-center align-middle">
                  <div class="d-inline-flex gap-2">
                    <%= link_to edit_game_path(game), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to game_path(game), method: :get, class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= button_to game_path(game), method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- Paginação -->
        <%= paginate @games %>
      </div>
    </div>
  </body>
  <!-- Bootstrap JS (opcional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <p style="color: green"><%= notice %></p>
</html>